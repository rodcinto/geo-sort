{
  "name": "geo-sort-graphql-api",
  "version": "1.0.0",
  "description": "Sort locations by geo-distance.",
  "main": "dist/app.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "preserve": "npm run build",
    "serve": "cross-env NODE_ENV=development concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "prestart": "npm run build",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "prettier:write": "prettier . --write",
    "lint": "eslint src/**/*.ts",
    "format": "eslint src/**/*.ts --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/rodcinto/geo-sort.git"
  },
  "keywords": [
    "geosort",
    "graphql",
    "api"
  ],
  "author": "Rodrigo Cinto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rodcinto/geo-sort/issues"
  },
  "homepage": "https://github.com/rodcinto/geo-sort#readme",
  "dependencies": {
    "@types/node": "^20.11.16",
    "cross-env": "^7.0.3",
    "dotenv": "^16.4.1",
    "express": "^4.18.2",
    "express-graphql": "^0.12.0",
    "graphql": "^15.8.0",
    "rimraf": "^5.0.5"
  },
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/chai-http": "^4.2.0",
    "@types/expect": "^24.3.0",
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "chai": "^5.0.3",
    "chai-http": "^4.4.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.56.0",
    "husky": "^9.0.10",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.3",
    "prettier": "3.2.4",
    "ts-mocha": "^10.0.0",
    "ts-node": "^10.9.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run prettier:write && npm run lint"
    }
  }
}
